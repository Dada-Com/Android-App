<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".AdminLogin"
	android:background="@drawable/bg2">

	<TextView
		android:id="@+id/TextView6"
		android:gravity="center"
		android:textColor="#FF000000"
		android:text="Admin Activity"
		android:layout_marginTop="20dp"
		android:textSize="25dp"
		android:textAlignment="center"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginBottom="20dp"
		android:fontFamily="@font/arial"/>

	<TextView
		android:layout_marginTop="10dp"
		android:textColor="#FF000000"
		android:text="Already registered member ? Please enter your username &amp; password"
		android:textSize="15dp"
		android:textAlignment="center"
		android:textStyle="bold"
		android:gravity="center"
		android:layout_gravity="center"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:fontFamily="@font/arial"
		android:paddingBottom="5dp"
		android:paddingTop="5dp"/>

	<EditText
		android:layout_width="wrap_content"
		android:ems="15"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:hint="Username"
		android:layout_gravity="center"
		android:layout_marginTop="40dp"
		android:textColor="#FF000000"
		android:inputType="text"
		android:id="@+id/editTextTextPersonName"
		android:padding="10dp"
		android:background="@drawable/rounded"
		android:drawableLeft="@drawable/ic_account"
		android:textColorHint="#FF000000"
		android:fontFamily="@font/arial"/>

	<EditText
		android:layout_width="wrap_content"
		android:ems="15"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:hint="Institute Code"
		android:layout_gravity="center"
		android:layout_marginTop="25dp"
		android:textColor="#FF000000"
		android:inputType="text"
		android:id="@+id/editTextTextPersonNamecode"
		android:padding="10dp"
		android:background="@drawable/rounded"
		android:drawableLeft="@drawable/ic_security"
		android:textColorHint="#FF000000"
		android:fontFamily="@font/arial"/>

	<EditText
		android:layout_width="wrap_content"
		android:ems="15"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:hint="Password"
		android:layout_gravity="center"
		android:layout_marginTop="25dp"
		android:textColor="#FF000000"
		android:inputType="textPassword"
		android:id="@+id/editTextTextPassword"
		android:padding="10dp"
		android:layout_marginBottom="15dp"
		android:background="@drawable/rounded"
		android:drawableLeft="@drawable/ic_lock_plus"
		android:textColorHint="#FF000000"
		android:fontFamily="@font/arial"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Login"
		android:layout_gravity="center"
		android:textSize="18dp"
		android:textColor="#FFFFFFFF"
		android:paddingLeft="45dp"
		android:paddingRight="45dp"
		android:id="@+id/button2"
		android:layout_marginTop="44dp"
		android:background="@drawable/button_round"
		android:fontFamily="@font/arial"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Do you haven't Member? Register Member"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/textView7"
		android:layout_gravity="center"
		android:layout_marginTop="54dp"
		android:layout_marginBottom="25dp"
		android:textColor="#FF0045FC"
		android:textSize="15dp"
		android:textAlignment="center"
		android:textStyle="bold"
		android:fontFamily="@font/arial"
		android:shadowColor="#FFFFFFFF"
		android:shadowDx="1.0"
		android:shadowDy="1.0"/>

</LinearLayout>

